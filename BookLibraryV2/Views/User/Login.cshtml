@model BookLibraryV2.Models.UserViewModel

<h2>Login</h2>

@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    @Html.ValidationSummary()
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(m => m.UserAccount.Username)
            @Html.TextBoxFor(m => m.UserAccount.Username, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserAccount.Password)
            @Html.PasswordFor(m => m.UserAccount.Password, new { @class = "form-control" })
        </div>
    </div>
    <input type="submit" class="btn btn-default" value="Login" />
}